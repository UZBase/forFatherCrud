{{#if products.length}}
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each products}}

      <div class="col">
        <div class="card">
          <img src="/images/{{img}}" class="card-img-top" alt="{{name}}" />
          <div class="card-body">
            <h5 class="card-title"><a href="/admin/categories/{{id}}">{{name}}</a></h5>
            <p class="card-text">{{price}}</p>
          </div>
          <div class="d-flex justify-content-between">
            <a class="btn btn-primary" href="/admin/products/edit/{{id}}"><i
                class="far fa-edit"
              ></i>O'zgartirish</a> 
            <a class="btn btn-danger" href="/admin/products/delete/{{id}}"><i
                class="fas fa-trash"
              ></i>O'chirish</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h2>Kategoriyalar bo'sh</h2>
{{/if}}
