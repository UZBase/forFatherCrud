{{#if products.length}}
<div class="row">
    {{#each products}}
    <div class="col-3">
        <div class="card">
            <img src="/images/{{img}}" class="card-img-top" alt="{{name}}" />
            <div class="card-body d-flex justify-content-between">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-title"><b>{{price}}</b></p>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/admin/products/edit/{{id}}">O'zgartirish</a>
                <a href="/admin/products/delete/{{id}}">O'chirish</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h2>Kategoriyalar bo'sh</h2>
{{/if}}