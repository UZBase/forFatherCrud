<h1>Hello categories</h1>

{{#if categories.length}}
  <div class="row">
    {{#each categories}}
      <div class="col-3">
        <div class="card">
          <img src="/images/{{icon}}" class="card-img-top" alt="{{name}}" />
          <div class="card-body">
            <h5 class="card-title"><a href="/admin/categories/{{id}}">{{name}}</a></h5>
          </div>
          <div class="d-flex justify-content-between">
            <a href="/admin/category/edit/{{id}}">O'zgartirish</a>
            <a href="/admin/category/delete/{{id}}">O'chirish</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h2>Kategoriyalar bo'sh</h2>
{{/if}}