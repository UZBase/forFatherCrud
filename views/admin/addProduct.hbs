<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Mahsulot nomi</label>
                                <input type="text" class="form-control" id="name" placeholder="Nomi" name="name"
                                    required />
                            </div>
                            <div class="form-group">
                                <label for="name">Mahsulot narxi</label>
                                <input type="number" class="form-control" id="price" placeholder="Narxi" name="price"
                                    required />
                            </div>
                            <div class="form-group">
                                <label for="icon">Mahsulot rasmi</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="img" name="img" required />
                                        <label class="custom-file-label" for="icon">Mahsulot rasmi</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mahsulot kategoriyasi</label>
                                <select name="categoryId" class="form-control">
                                    {{#each categories}}
                                    <option value="{{id}}" id="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Yaratish</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</div>