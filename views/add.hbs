<h1>Add car</h1>
<form action="/add" method="POST">
  <div class="row">
    <div class="input-field col s12">
      <input id="model" type="text" class="validate" required name="model" />
      <label for="model">Car model</label>
      <span class="helper-text" data-error="Write the car model"></span>
    </div>
    <div class="input-field col s12">
      <input
        id="price"
        type="number"
        class="validate"
        required
        min="1"
        name="price"
      />
      <label for="price">Car price</label>
      <span class="helper-text" data-error="Write the car price"></span>
    </div>
    <div class="input-field col s12">
      <input id="img" type="text" class="validate" required name="img" />
      <label for="img">Car img</label>
      <span class="helper-text" data-error="Write the car img"></span>
    </div>
    <button class="btn btn-primary">Send</button>
  </div>
</form>